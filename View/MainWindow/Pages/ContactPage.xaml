<Page x:Class="Strunchik.View.MainWindow.Pages.ContactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Strunchik.View.MainWindow.Pages"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ContactPage"
      RenderOptions.BitmapScalingMode="HighQuality">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Контакты" FontSize="30" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"
                       Foreground="White"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button 
                    Grid.Column="2" 
                    Width="50"
                    Height="50"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right" 
                    Background="Transparent" 
                    BorderBrush="Transparent"
                    Padding="0"
                    Margin="10"
                    Click="TG_Click">

                    <Button.Content>
                        <Image Source="/Resources/Images/telegram.png"/>
                    </Button.Content>
                </Button>
                <Button 
                      Grid.Column="2" 
                      Width="50"
                      Height="50"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Right" 
                      Background="Transparent" 
                      BorderBrush="Transparent"
                      Padding="0"
                      Margin="10"
                      Click="WEB_Click">

                    <Button.Content>
                        <Image Source="/Resources/Images/website.png"/>
                    </Button.Content>
                </Button>
                <Button 
                      Grid.Column="2" 
                      Width="50"
                      Height="50"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Right" 
                      Background="Transparent" 
                      BorderBrush="Transparent"
                      Padding="0"
                      Margin="10"
                    Click="INST_Click">

                    <Button.Content>
                        <Image Source="/Resources/Images/instagram.png"/>
                    </Button.Content>
                </Button>
            </StackPanel>

            <Grid Margin="150 0 150 0"
                  Height="300"
                  Width="500">
                <wv2:WebView2 x:Name="webView" 
                              Source="https://youtu.be/3Jle14vIC2o"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"/>
            </Grid>

            <TextBlock Text="Email: strunchic.inc@gmail.com"
                       FontSize="20" 
                       Margin="0,10,0,0" 
                       HorizontalAlignment="Center"
                       Foreground="White"/>
            <TextBlock Text="Телефон: +375447985710" 
                       FontSize="20"
                       Margin="0,10,0,0" 
                       HorizontalAlignment="Center"
                       Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
