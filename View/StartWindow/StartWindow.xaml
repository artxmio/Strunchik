<Window x:Class="Strunchik.View.StartWindow.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:Strunchik.ViewModel.StartWindowViewModel"
        mc:Ignorable="d"
        Background="Transparent"
        RenderOptions.BitmapScalingMode="HighQuality"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        Title="StartWindow" Height="350" Width="900"
        
        d:DataContext="{d:DesignInstance vm:StartWindowViewModel}">
    <Window.Resources>
        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Setter Property="Opacity" Value="0.1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#202020" CornerRadius="5" Padding="5" Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Background="#202020" Height="Auto" MouseDown="TitleBar_MouseDown">
                <Button Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent" BorderBrush="Transparent" Padding="0" 
                        Command="{Binding CloseWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <Button.Content>
                        <Image Source="..\..\Resources\Images\cross.png" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
            </Grid>

            <!-- Форма авторизации -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="40 50 0 0" HorizontalAlignment="Center" Width="200">
                <TextBlock Text="Авторизация" FontSize="25" Margin="0,0,0,20" Foreground="White" HorizontalAlignment="Center"/>
                <TextBox 
                    materialDesign:HintAssist.Hint="Email" 
                    materialDesign:HintAssist.Foreground="Red"  
                    materialDesign:TextFieldAssist.UnderlineBrush="Red"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                    BorderBrush="Gray"
                    Margin="0,0,0,10" 
                    Foreground="White"/>
                <PasswordBox 
                    materialDesign:HintAssist.Hint="Пароль"
                    Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                    materialDesign:HintAssist.Foreground="Red"  
                    materialDesign:TextFieldAssist.UnderlineBrush="Red"
                    BorderBrush="Gray"
                    Margin="0,0,0,10" 
                    Foreground="White" />
                <Button Content="Войти" Style="{StaticResource MaterialDesignRaisedButton}" Background="Red" BorderBrush="Transparent"/>
            </StackPanel>

            <!-- Логотип -->
            <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="../../Resources/Images/logo.jpg" Width="300" Height="300" />
            </StackPanel>

            <!-- Форма регистрации -->
            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0 50 40 0" Width="200" HorizontalAlignment="Center">
                <TextBlock Text="Регистрация" FontSize="25" Margin="0,0,0,20" Foreground="White" HorizontalAlignment="Center"/>
                <TextBox
                    materialDesign:HintAssist.Hint="Имя" 
                    materialDesign:HintAssist.Foreground="Red"  
                    materialDesign:TextFieldAssist.UnderlineBrush="Red"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                    BorderBrush="Gray"
                    Margin="0,0,0,10" 
                    Foreground="White" />
                <TextBox 
                    materialDesign:HintAssist.Hint="Email" 
                    materialDesign:HintAssist.Foreground="Red"  
                    materialDesign:TextFieldAssist.UnderlineBrush="Red"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                    BorderBrush="Gray"
                    Margin="0,0,0,10"
                    Foreground="White" />
                <PasswordBox
                    materialDesign:HintAssist.Hint="Пароль" 
                    Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                    materialDesign:HintAssist.Foreground="Red"  
                    materialDesign:TextFieldAssist.UnderlineBrush="Red"
                    BorderBrush="Gray"
                    Margin="0,0,0,10" 
                    Foreground="White"/>
                <Button Content="Зарегистрироваться" Style="{StaticResource MaterialDesignRaisedButton}" Background="Red" BorderBrush="Transparent"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
